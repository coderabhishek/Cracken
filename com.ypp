expr: expr PLUS expr_l {
    $$ = create();
	if(!coercible($1->type, $3->type))
		yyerror("Type Mismatch!!");
	$$->type = $1->type;
	string temp = $1->ic + "\n";
	temp += "_t1 = _t0;\n";
	temp += $3->ic + "\n";
	temp += "_t0 = _t1 + _t0;\n";
	$$->ic = temp;
}| expr MINUS expr_l {
	$$ = create();
	if(!coercible($1->type, $3->type))
		yyerror("Type Mismatch!!");
	$$->type = $1->type;
	string temp = $1->ic + "\n";
	temp += "_t1 = _t0;\n";
	temp += $3->ic + "\n";
	temp += "_t0 = _t1 - _t0;\n";
	$$->ic = temp;
}| expr_l {
	$$ = create();
	$$->type = $1->type;
	string temp = $1->ic + "\n";
	$$->ic = temp;
}| OP_BR expr CL_BR {
	$$ = create();
	$$->type = $2->type;
	string temp = $2->ic + "\n";
	$$->ic = temp;
}

expr_l : expr_l STAR expr_ll {
       $$ = create();
	if(!coercible($1->type, $3->type))
		yyerror("Type Mismatch!!");
	$$->type = $1->type;
	string temp = $1->ic + "\n";
	temp += "_t1 = _t0;\n";
	temp += $3->ic + "\n";
	temp += "_t0 = _t1 * _t0;\n";
	$$->ic = temp;
}| expr_l DIVIDE expr_ll {
	$$ = create();
	if(!coercible($1->type, $3->type))
		yyerror("Type Mismatch!!");
	$$->type = $1->type;
	string temp = $1->ic + "\n";
	temp += "_t1 = _t0;\n";
	temp += $3->ic + "\n";
	temp += "_t0 = _t1 / _t0;\n";
	$$->ic = temp;
}| expr_ll  {
	$$ = $1;
}

expr_ll : place_holder {
	$$ = create();
	$$->type = find_type($1);
	$$->ic = "_t0 = " + string($1) + ";\n";
}  




