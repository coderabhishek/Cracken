program : program line {
	$$->ic = string($1->ic) + string($2->ic);
	ir = $$->ic;
}| program function {
	$$->ic = string($1->ic) + string($2->ic);
	ir = $$->ic;       
}| line {
	ir = $1->ic;
	cout<<ir;
}	| function {
	ir = $1->ic;
}	


function : IDENTIFIER IDENTIFIER OP_BR emp_f param_list CL_BR OP_PARENS lines CL_PARENS{
	 if(types.find($1) == types.end())
		yyerror("Unknown type " + string($1) + ". ");
	if(!coercible($8->type, $1))
		yyerror("Wrong return type!!");		
	func temp_f = func();
	temp_f.name = string($2);
	temp_f.r_type = string($1);
	temp_f.para_type_list = $5->v; 
	funcs.push_back(temp_f);
	$$ = create();
	$$->type = $1;
	$$->ic = "begfunc " + string($2) + to_string(size_of_param_frame(temp_f.para_type_list)) + ";\n";
	$$->ic += $8->ic;
	$$->ic += "func end;\n";		
	sym_table.clear_scope();
	cur_scope++;
	func_bool = false;
}

emp_f : {
      cur_scope--;      
}

param_list : param COMMA param_list{
	   $$ = $3;
	$$->v.push_back(string($1));	
} | param {
	vector<string> v = {string($1)};
	$$ = new param_list();
	$$->v = v;

}

param : IDENTIFIER IDENTIFIER {
      strcpy($$, $1);     
	sym_table.set($2, $1); 
}



line : decl COL{
     $$ = $1;
