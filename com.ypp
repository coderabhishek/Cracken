var_list : IDENTIFIER IDENTIFIER COL {
	 if(types.find($1) == types.end())
		yyerror("Undefined type.");
	else {
		struct_sub_type[string($<str>-1) + "." + string($2)] = $1; 
	}
	types[$<str>-1] += types[$1];
}
| IDENTIFIER IDENTIFIER COL var_list {
