} | loop_block {
	$$ = $1;
} | struct_def{
	$$ = $1;
} | assignment {
	$$ = $1;
} | return_stmt {
	$$ = $1;
} | func_call {
	$$ = $1;
}

func_call : IDENTIFIER OP_BR emp place_holder_list CL_BR COL {
	  string ts = $1; 
	  if(func_itr->para_type_list.end() != param_itr)
		yyerror("Too few parameters");
	  $$ = create();
	  $$->type = func_itr->r_type;
	  $$->ic = $4->ic;
	  for(int i=0;i<func_itr->para_type_list.size();++i)
		$$->ic += "param _t" + to_string(i+2) + ";\n";	 
	  $$->ic += string("lcall _") + string($1) + string(";\n");
	  $$->ic += "popParams " + to_string(func_itr->para_type_list.size()) + ";\n";
	  func_itr = f_end_iterator.end();
	  param_itr = p_end_iterator.end();	
		f_name = ""; 

}

emp : {
    assert(f_name == "");
	f_name = $<str>-1;    
}

place_holder_list : expr{
		  assert(func_itr == f_end_iterator.end());
	assert(param_itr == p_end_iterator.end());	
	auto t_str = f_name;
	func_itr = find_if(funcs.begin(), funcs.end(), [t_str](func f) -> bool {f.name == t_str;});
	if(func_itr == funcs.end())
		yyerror("No such function as " + t_str);
	param_itr = func_itr->para_type_list.begin();
	if(!coercible(*param_itr, $1->type))
		yyerror("Arg type mismatched for arg " + to_string(param_itr - func_itr->para_type_list.begin()));
	$$ = create();
	$$->type = "void";
	$$->ic = $1->ic;
	$$->ic += "_t" + to_string( param_itr - func_itr->para_type_list.begin() + 2 ) + " = _t0;\n";
	param_itr++;
} |  expr COMMA place_holder_list  {
	if(param_itr == func_itr->para_type_list.end())
		yyerror("Too many parameters");
	if(!coercible(*param_itr, $1->type))
		yyerror("Arg type mismatched for arg " + to_string(param_itr - func_itr->para_type_list.begin()));
	$$ = create();	
	$$->type = "void";
	$$->ic = $3->ic;
	$$->ic += $1->ic;
	$$->ic += "_t" + to_string( param_itr - func_itr->para_type_list.begin() + 2 ) + " = _t0;\n";
	param_itr++;
}

return_stmt : RETURN IDENTIFIER COL {
	    $$ = create();
	$$->type = sym_table.get($2);
	$$->ic = "return " + string($2) + ";\n";
}

assignment : IDENTIFIER EQ expr COL {
	   if(!sym_table.find($1))
		yyerror("No var named " + string($1) + " defined!!");
	if(!coercible($3->type, sym_table.get($1)))
		yyerror("Type mismatch!! Can't assign " + $3->type + " to " + sym_table.get($1) + ".");
	$$ = create();	
	$$->type = "void";
	$$->ic = $3->ic;
	$$->ic += string($1) + " = _t0;\n"; 
}
